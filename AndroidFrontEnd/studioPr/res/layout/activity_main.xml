<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bk"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/appname"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="20dp"
        android:text="Follow Me"
        android:textColor="#0f4d92"
        android:textSize="40dp"

        />

    <ImageButton
        android:id="@+id/Staff1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_x="2dp"
        android:layout_y="137dp"
        android:background="@null"
        android:src="@drawable/stafflogin1" />

    <ImageButton
        android:id="@+id/Student1"
        android:layout_width="135dp"
        android:layout_height="141dp"
        android:layout_x="194dp"
        android:layout_y="134dp"
        android:src="@drawable/studentlogin4"
        android:background="@null"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="260dp"
        android:text="Staff"

        android:textSize="24dp"
        android:textColor="#0f4d92"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:layout_y="260dp"
        android:text="Student"
        android:textSize="24dp"
        android:textColor="#0f4d92"

        android:textAppearance="?android:attr/textAppearanceMedium" />

</AbsoluteLayout>

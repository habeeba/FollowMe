<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bk"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/Student1"
        android:layout_marginRight="18dp"
        android:text="Student"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0f4d92"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Staff1"
        android:layout_below="@+id/Staff1"
        android:layout_marginRight="35dp"
        android:text="Staff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0f4d92"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:text="  Follow Me"
        android:textColor="#0f4d92"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Staff1"
        android:layout_toRightOf="@+id/Staff1"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <ImageButton
        android:id="@+id/Student1"
        android:layout_width="135dp"
        android:layout_height="141dp"
        android:background="@null"
        android:src="@drawable/studentlogin4"
        android:layout_below="@+id/appname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp" />

    <ImageButton
        android:id="@+id/Staff1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@null"
        android:src="@drawable/stafflogin1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

</RelativeLayout>